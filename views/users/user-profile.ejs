									<h3 class=" semi-bold">
									<%=user.firstName %> <%=user.lastName %>
									</h3>
								</div>
							</div>		
						</div>
                        <div class="tiles-body">
                     
                            <div class="row  column-seperation">  
                                <div class="col-md-6">
                                    <form id = "accountInfoForm" name = "accountInfoForm" method= "post" action="saveAccountInfo" role="form">
                                    <div id = "accountInfoStatus">
                                    </div>
                                    <h4>Contact Details</h4>
                                    <div class="row form-row">
                                        <div class="col-md-12">
                                            <input name="email" id="email" type="text" class="form-control" value=<%=user.email%>>
                                        </div>
                                        <div class="col-md-12">
                                            <input name="parID" id="parID" type="text" class="form-control" readonly='readonly' value=<%=user._id%> >
                                        </div>
                                    </div>
                                    <div class="row form-row">
                                        <div class="col-md-3">
                                            <input name="countrycode" id="countrycode" type="text" class="form-control" value=<%=user.contactInformation.countrycode%>>
                                        </div>
                                        <div class="col-md-9">
                                            <input name="phonenumber" id="phonenumber" type="text" class="form-control" value=<%=user.contactInformation.phonenumber%>>
                                        </div>
                                    </div>

                                    
            
                                    <h4>Change Password</h4>
                                     <div class="row form-row">
                                        <div class="col-md-12">
                                            <input name="pass1" id="pass1" type="password" class="form-control" placeholder="Enter New Password">
                                        </div>
                                        <div class="col-md-12">
                                            <input name="pass2" id="pass2" type="password" class="form-control" placeholder="Confirm New Password">
                                        </div>
                                    </div>
                                        
                            <div class="form-actions">
                                <div class="pull-right">
                                    <button class="btn btn-primary btn-cons" type="submit">
                                        <i class="icon-ok"></i> Save
                                    </button>
                                </div>
                            </div>
                                        
                        </form>
                    </div>
                                <div class="col-md-6">
                                    <form id = "relationForm" name = "relationForm" method= "post" action="saveRelationInfo" role="form">
                                      <div id = "relInfoStatus">
                                      </div>
                                      <h4>Edit Relation</h4>
                                    <div id = "addTagsDiv" class="row form-row">
                                      <div class="addTagDiv top">
                                      <div class="col-md-3">
                                       <input name="relation" id="relation" type="text" class="form-control" placeholder="+relation">
                                      </div>
                                      <div class="col-md-7">
                                       <input name="rel_email" id="rel_email" type="email" class="form-control" placeholder="Relative Email">
                                      </div>
                                      <div class = "col-md-1 links">
                                              <a href = "javascript:addElement();" class="addMore topanchor">add</a>
                                      </div>
                                      </div>
                                      </div>
                                    <% for(var fm =0 ; fm < user.familyMembers.length ; fm++){ %>
